<%= form_for post do |f| %>
  <div>
    <%= f.label :title  %>
    <%= f.text_field :title ,size: "49"%>
  </div>
 <br>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body, size: '50x5' %>
  </div>
 <br>
  <div>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
 <br>
  <%= f.submit %>
<% end %>